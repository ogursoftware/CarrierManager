<%= form_with(model: load) do |form| %>
  <% if load.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(load.errors.count, "error") %> prohibited this load from being saved:</h2>

      <ul>
        <% load.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  

  <div class="form-group">
    <br>
    <%= form.number_field :load_number ,class:"form-control",placeholder:"Load Number" %>
  </div>

  <div class="form-group">
    <br>
    <%= form.text_field :pickup_city ,class:"form-control",placeholder:"Pickup City"%>
  </div>

  <div class="form-group">
    <br>
    <%= form.text_field :delivery_city ,class:"form-control",placeholder:"Delivery City"%>
  </div>

  <div class="form-group">
    <br>
    <%= form.text_field :broker,class:"form-control",placeholder:"Broker"%>
  </div>

  <div class="form-group">
    <br>
    <div class="input-group-prepend">
    <span class="input-group-text">$</span>  
  </div>
    <%= form.number_field :rate ,class:"form-control",placeholder:"Rate"%>
     
  </div>

   <div class="form-group">
    <br>
    <%= form.datetime_local_field :pickup_date ,class:"form-control",placeholder:"Pickup Date"%>
  </div>

  <div class="form-group">
    <br>
    <%= form.datetime_local_field :delivery_date ,class:"form-control",placeholder:"Delivery Date"%>
  </div>

  <div class="form-group">
    <br>
    <%= form.file_field :rate_confirmation ,class:"form-control",placeholder:"Rate Confirmation"%>
  </div>

  

  <br>
 
  <br>
  <select class="form-control",  name="load[kadere_id]">
    <% Kadere.all.each do |kadere| %>
        <option value="<%= kadere.id %>"><%= kadere.name %></option>
    <% end %>
  </select>

  

  <div class="form-group">
    <br>
    <%= form.label :status ,class:"form-control",placeholder:"Status"%>
        <%= form.select :status, options_for_select(Load.statuses.map {|key, value| [key.titleize, Load.statuses.key(value)]}, @load.status) %>



 <div> 
 <br>
<button type="submit" class="btn btn-dark">Create Load</button>

  </div>
<% end %>
